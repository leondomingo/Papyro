        <page_footer>
            <id>page_footer_1</id>
            <size>
                <height>25</height>
                <width></width>
            </size>
            <options>
                <print_on_first_page/>
            </options>
            <body>
                <text>
                    <id></id>
                    <value>PAGE FOOTER</value>
                    <position>
                        <left>5</left>
                        <top>5</top>
                    </position>
